@model QuestBoard.Service.ViewModels.GuildMembersViewModels.GuildMembersIndexViewModel
@{
    ViewData["Title"] = "Guild Members";
}

<div class="row">
    <div class="col-md-6">
        <div class="card modern-card">
            <div class="card-header modern-card-header">
                <h2 class="mb-0">
                    <i class="fas fa-crown text-warning me-2"></i>
                    Dungeon Masters
                </h2>
            </div>
            <div class="card-body modern-card-body">
                @if (Model.DungeonMasters.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" class="w-50">Name</th>
                                    <th scope="col" class="w-50">Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dm in Model.DungeonMasters)
                                {
                                    <tr>
                                        <td>@dm.Name</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(dm.Email))
                                            {
                                                <a href="mailto:@dm.Email" class="email-link">@dm.Email</a>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">No email provided</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-dragon fa-3x text-warning mb-3"></i>
                        <h4>No Dungeon Masters Found</h4>
                        <p class="text-muted">The guild registry is currently empty. Brave souls may register as new quest leaders.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card modern-card">
            <div class="card-header modern-card-header">
                <h2 class="mb-0">
                    <i class="fas fa-users text-primary me-2"></i>
                    Registered Players
                </h2>
            </div>
            <div class="card-body modern-card-body">
                @if (Model.Players.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" class="w-50">Name</th>
                                    <th scope="col" class="w-50">Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var player in Model.Players)
                                {
                                    <tr>
                                        <td>@player.Name</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(player.Email))
                                            {
                                                <a href="mailto:@player.Email" class="email-link">@player.Email</a>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">No email provided</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-user fa-3x text-warning mb-3"></i>
                        <h4>No Players Found</h4>
                        <p class="text-muted">No adventurers have registered yet. Players can register to join quests.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
