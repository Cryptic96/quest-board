@model CreateQuestViewModel
@{
    ViewData["Title"] = "Create Quest";
}

<div class="row">
    <div class="col-lg-8 col-md-7">
        <div class="card bg-dark text-light border-warning">
            <div class="card-header bg-warning text-dark">
                <h2 class="mb-0">
                    <i class="fas fa-scroll me-2"></i>
                    Create New Quest
                </h2>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="Quest.Title" class="form-label">Quest Title <span class="text-danger">*</span></label>
                        <input asp-for="Quest.Title" class="form-control border-warning" placeholder="Enter the quest title..." />
                        <span asp-validation-for="Quest.Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quest.Description" class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Quest.Description" class="form-control border-warning" rows="4" placeholder="Describe the quest, what players can expect, any special requirements..."></textarea>
                        <span asp-validation-for="Quest.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quest.Difficulty" class="form-label">Difficulty <span class="text-danger">*</span></label>
                        <select asp-for="Quest.Difficulty" class="form-select border-warning">
                            <option value="0">Easy</option>
                            <option value="1">Medium</option>
                            <option value="2">Hard</option>
                            <option value="3">Deadly</option>
                        </select>
                        <span asp-validation-for="Quest.Difficulty" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Quest.DungeonMasterId" class="form-label">Dungeon Master <span class="text-danger">*</span></label>
                        <select name="Quest.DungeonMasterId" class="form-select border-warning">
                            <option value="">Select a Dungeon Master</option>
                            @for (int i = 0; i < Model.DungeonMasters.Count; i++)
                            {
                                <option value="@Model.DungeonMasters[i].Id">@Model.DungeonMasters[i].Name</option>
                            }
                        </select>
                        <span asp-validation-for="Quest.DungeonMasterId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Proposed Dates & Times <span class="text-danger">*</span></label>
                        <div id="proposed-dates">
                            @for (int i = 0; i < Model.Quest.ProposedDates.Count; i++)
                            {
                                <div class="mb-3 proposed-date-item">
                                    <label class="form-label">Proposed Date @(i + 1)</label>
                                    <div class="input-group">
                                        <input asp-for="Quest.ProposedDates[i]" type="datetime-local" class="form-control border-warning" required />
                                        @if (i > 0)
                                        {
                                            <button type="button" class="btn btn-outline-danger" onclick="removeProposedDate(this)">
                                                <i class="fas fa-trash me-1"></i>Remove
                                            </button>
                                        }
                                    </div>
                                    <span asp-validation-for="Quest.ProposedDates[i]" class="text-danger"></span>
                                </div>
                            }
                        </div>
                        <button type="button" class="btn btn-outline-warning btn-sm" onclick="addProposedDate()">
                            <i class="fas fa-plus me-1"></i>Add Another Date Option
                        </button>
                        <div class="form-text text-muted">Provide multiple date/time options for players to vote on. At least one date is required.</div>
                        <span asp-validation-for="Quest.ProposedDates" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-warning me-2">
                            <i class="fas fa-plus me-2"></i>Create Quest
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4 col-md-5">
        <div class="card bg-dark text-light border-warning">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">
                    <i class="fas fa-lightbulb me-2"></i>
                    Quest Creation Tips
                </h4>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-check text-warning me-2"></i>
                        Provide a clear, engaging title
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-warning me-2"></i>
                        Include difficulty expectations
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-warning me-2"></i>
                        Offer multiple date options
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-warning me-2"></i>
                        Set realistic player limits
                    </li>
                    <li>
                        <i class="fas fa-check text-warning me-2"></i>
                        Include any special requirements
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple form validation without jQuery validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            
            form.addEventListener('submit', function(e) {
                const dateInputs = document.querySelectorAll('input[type="datetime-local"]');
                let hasValidDate = false;
                
                dateInputs.forEach(function(input) {
                    if (input.value) {
                        hasValidDate = true;
                    }
                });
                
                if (!hasValidDate) {
                    e.preventDefault();
                    alert('Please provide at least one proposed date and time.');
                    return false;
                }
                
                const submitButton = document.querySelector('button[type="submit"]');
                submitButton.disabled = true;
                submitButton.textContent = 'Creating Quest...';
            });
        });
    </script>
}