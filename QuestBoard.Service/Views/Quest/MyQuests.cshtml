@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@model IEnumerable<Quest>
@{
    ViewData["Title"] = "My Quests";
    var tokens = Antiforgery.GetAndStoreTokens(ViewContext.HttpContext);
}

<div class="mb-4">
    <h1>My Quests</h1>
</div>

<div class="card bg-dark text-light border-warning mb-4">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0">
            <i class="fas fa-key me-2"></i>
            DM Verification
        </h5>
    </div>
    <div class="card-body">
        <p class="text-muted">Enter your DM name to view and manage your quests:</p>
        <form asp-action="MyQuests" method="post">
            <div class="input-group mb-3">
                <input name="DmName" class="form-control border-warning" placeholder="Enter your DM name..."
                       value="@ViewBag.DmName" required />
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-search me-2"></i>Find My Quests
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var quest in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card bg-dark text-light border-warning quest-card @(quest.IsFinalized ? "quest-status-finalized" : "quest-status-open")">
                    <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                        <span class="badge difficulty-@quest.Difficulty.ToString().ToLower()">
                            @quest.Difficulty
                        </span>
                        <small class="fw-bold">
                            @if (quest.IsFinalized)
                            {
                                <text><i class="fas fa-check-circle me-1"></i>Finalized</text>
                            }
                            else
                            {
                                <text><i class="fas fa-clock me-1"></i>Open</text>
                            }
                        </small>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-warning">@quest.Title</h5>
                        <p class="card-text">@quest.Description</p>

                        @if (quest.IsFinalized)
                        {
                            <p class="card-text">
                                <strong class="text-warning">Date:</strong><br>
                                <small class="text-muted">@quest.FinalizedDate?.ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                            </p>
                            <p class="card-text">
                                <strong class="text-warning">Players:</strong><br>
                                <small class="text-muted">@string.Join(", ", quest.PlayerSignups.Where(ps => ps.IsSelected).Select(ps => ps.PlayerName))</small>
                            </p>
                        }
                        else
                        {
                            <p class="card-text">
                                <strong class="text-warning">Signups:</strong> @quest.PlayerSignups.Count<br>
                                <strong class="text-warning">Created:</strong> @quest.CreatedAt.ToString("MMM dd, yyyy")
                            </p>
                        }
                    </div>
                    <div class="card-footer bg-dark border-warning">
                        <a href="@Url.Action("Details", "Quest", new { id = quest.Id })" class="btn btn-outline-warning btn-sm me-2">
                            <i class="fas fa-eye me-1"></i>View
                        </a>
                        @if (!quest.IsFinalized)
                        {
                            <a href="@Url.Action("Manage", "Quest", new { id = quest.Id })" class="btn btn-outline-success btn-sm me-2">
                                <i class="fas fa-cogs me-1"></i>Manage
                            </a>
                        }
                        <a href="#" class="btn btn-outline-danger btn-sm" onclick="deleteQuest(@quest.Id)">
                            <i class="fas fa-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.DmName as string))
{
    <div class="card bg-dark text-light border-warning">
        <div class="card-body text-center py-5">
            <i class="fas fa-dragon fa-3x text-warning mb-3"></i>
            <h3 class="text-warning">No quests found</h3>
            <p class="text-muted">You haven't created any quests yet.</p>
            <a href="@Url.Action("Create", "Quest")" class="btn btn-warning">
                <i class="fas fa-plus me-2"></i>Create Your First Quest
            </a>
        </div>
    </div>
}

<script>
    function deleteQuest(id) {
        if (confirm("Are you sure?")) {
            fetch(`/Quest/Delete/${id}`, {
                method: "DELETE",
                headers: {
                    'RequestVerificationToken': '@tokens.RequestToken'
                }
            }).then(res => {
                if (res.ok) {
                    location.reload();
                } else {
                    alert("Delete failed.");
                }
            });
        }
    }
</script>