@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@model IEnumerable<DungeonMaster>
@{
    ViewData["Title"] = "Dungeon Masters";
    var tokens = Antiforgery.GetAndStoreTokens(ViewContext.HttpContext);
}

<div class="row">
    <div class="col-lg-8 col-md-7">
        <div class="card modern-card">
            <div class="card-header modern-card-header">
                <h2 class="mb-0">
                    <i class="fas fa-crown me-2"></i>
                    Dungeon Masters Guild
                </h2>
            </div>
            <div class="card-body modern-card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dm in Model)
                                {
                                    <tr>
                                        <td>@dm.Name</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(dm.Email))
                                            {
                                                <a href="mailto:@dm.Email" class="text-warning">@dm.Email</a>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">No email provided</span>
                                            }
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteDungeonMaster(@dm.Id)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-dragon fa-3x text-warning mb-3"></i>
                        <h4>No Dungeon Masters Found</h4>
                        <p class="text-muted">The guild registry is currently empty. Brave souls may register as new quest leaders.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-4 col-md-5">
        @await Html.PartialAsync("Create", new CreateDungeonMasterViewModel())
    </div>
</div>

<script>
    function deleteDungeonMaster(id) {
        if (confirm("Are you sure you want to delete this Dungeon Master?")) {
            fetch(`/DungeonMaster/Delete/${id}`, {
                method: "DELETE",
                headers: {
                    'RequestVerificationToken': '@tokens.RequestToken'
                }
            }).then(res => {
                if (res.ok) {
                    location.reload();
                } else {
                    alert("Delete failed.");
                }
            });
        }
    }
</script>
