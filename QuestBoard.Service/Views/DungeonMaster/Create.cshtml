@model DungeonMaster

<div class="card bg-dark text-light border-warning">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">
            <i class="fas fa-user-plus me-2"></i>
            Join the Guild
        </h4>
    </div>
    <div class="card-body">
        <form asp-controller="DungeonMaster" asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control border-warning" 
                       style="background-color: #343a40; color: #ffffff;"
                       placeholder="Enter your name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control border-warning" 
                       style="background-color: #343a40; color: #ffffff;"
                       placeholder="your.email@example.com">
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="form-text text-muted">
                    Optional - for quest notifications
                </div>
            </div>
            
            <button type="submit" class="btn btn-warning w-100">
                <i class="fas fa-scroll me-2"></i>
                Register as Dungeon Master
            </button>
        </form>
    </div>
</div>